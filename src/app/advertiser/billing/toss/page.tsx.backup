'use client';

import { useEffect, useState } from 'react';
import { useRouter, useSearchParams } from 'next/navigation';
import { Card, CardBody } from '@/app/_ui/primitives';

// Load Toss Payments SDK dynamically
const loadTossPaymentsSDK = (): Promise<void> => {
  return new Promise((resolve, reject) => {
    // Check if already loaded
    if (window.TossPayments) {
      console.log('TossPayments SDK already loaded');
      resolve();
      return;
    }

    // Check if script is already in DOM
    const existingScript = document.querySelector('script[src="https://js.tosspayments.com/v1/payment-widget"]');
    if (existingScript) {
      console.log('TossPayments script already exists in DOM');
      // Wait for it to load
      const checkLoaded = () => {
        if (window.TossPayments) {
          resolve();
        } else {
          setTimeout(checkLoaded, 100);
        }
      };
      checkLoaded();
      return;
    }

    console.log('Loading TossPayments SDK...');
    const script = document.createElement('script');
    script.src = 'https://js.tosspayments.com/v1/payment';
    script.async = true;
    script.onload = () => {
      console.log('TossPayments SDK loaded successfully');
      resolve();
    };
    script.onerror = (e) => {
      console.error('Failed to load TossPayments SDK:', e);
      reject(new Error('Failed to load Toss Payments SDK'));
    };

    document.head.appendChild(script);
  });
};

export default function TossPaymentPage() {
  const router = useRouter();
  const searchParams = useSearchParams();
  const [isLoading, setIsLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [debugInfo, setDebugInfo] = useState<any>(null);

  // For testing: skip SDK and simulate payment
  const simulatePayment = () => {
    const orderId = searchParams.get('orderId');
    const amount = searchParams.get('amount');

    if (!orderId || !amount) {
      setError('결제 정보가 올바르지 않습니다.');
      setIsLoading(false);
      return;
    }

    // Simulate successful payment by redirecting to success page
    console.log('Simulating payment success...');
    setTimeout(() => {
      window.location.href = `${window.location.origin}/advertiser/billing/toss/success?orderId=${orderId}&paymentKey=test_payment_key_${Date.now()}&amount=${amount}`;
    }, 2000);
  };

  useEffect(() => {
    const initializePayment = async () => {
      try {
        console.log('Starting payment initialization...');

        // Get payment parameters from URL
        const orderId = searchParams.get('orderId');
        const amount = searchParams.get('amount');
        const orderName = searchParams.get('orderName');
        const customerName = searchParams.get('customerName');
        const customerEmail = searchParams.get('customerEmail');

        console.log('URL params:', { orderId, amount, orderName, customerName, customerEmail });

        if (!orderId || !amount || !orderName) {
          console.error('Missing required parameters');
          setError('결제 정보가 올바르지 않습니다.');
          setIsLoading(false);
          return;
        }

        // For development: use simulation instead of real SDK
        if (process.env.NODE_ENV === 'development') {
          console.log('Development mode: using simulated payment');
          simulatePayment();
          return;
        }

        // Production: use real Toss Payments SDK
        console.log('Production mode: initializing real Toss Payments');

        // Load SDK if needed
        if (!window.TossPayments) {
          await loadTossPaymentsSDK();
        }

        if (!window.TossPayments) {
          throw new Error('TossPayments SDK 로드 실패');
        }

        // Initialize and request payment
        const tossPayments = window.TossPayments(clientKey);
        const paymentAmount = parseInt(amount);

        // Use general payment SDK API
        await tossPayments.requestPayment('카드', {
          amount: paymentAmount,
          orderId,
          orderName,
          successUrl: `${window.location.origin}/advertiser/billing/toss/success?orderId=${orderId}`,
          failUrl: `${window.location.origin}/advertiser/billing/toss/fail?orderId=${orderId}`,
          customerName,
          customerEmail
        });

        // Get client key from environment
        const clientKey = process.env.NEXT_PUBLIC_TOSS_PAYMENTS_CLIENT_KEY;
        console.log('Client key available:', !!clientKey);

        if (!clientKey) {
          console.error('Missing client key');
          setError('결제 설정이 올바르지 않습니다.');
          setIsLoading(false);
          return;
        }

        // Production: use real Toss Payments SDK
        console.log('Production mode: initializing real Toss Payments');

        // Load SDK if needed
        if (!window.TossPayments) {
          await loadTossPaymentsSDK();
        }

        if (!window.TossPayments) {
          throw new Error('TossPayments SDK 로드 실패');
        }

        // Initialize and request payment
        const tossPayments = window.TossPayments(clientKey);
        const paymentAmount = parseInt(amount);

        // Use general payment SDK API
        await tossPayments.requestPayment('카드', {
          amount: paymentAmount,
          orderId,
          orderName,
          successUrl: `${window.location.origin}/advertiser/billing/toss/success?orderId=${orderId}`,
          failUrl: `${window.location.origin}/advertiser/billing/toss/fail?orderId=${orderId}`,
          customerName,
          customerEmail
        });

      } catch (err) {
        console.error('Payment initialization error:', err);
        const errorMessage = err instanceof Error ? err.message : '알 수 없는 오류';
        setError(`결제 초기화 중 오류가 발생했습니다: ${errorMessage}`);

        // Debug info for development
        if (process.env.NODE_ENV === 'development') {
          setDebugInfo({
            error: err,
            urlParams: {
              orderId: searchParams.get('orderId'),
              amount: searchParams.get('amount'),
              orderName: searchParams.get('orderName'),
              customerName: searchParams.get('customerName'),
              customerEmail: searchParams.get('customerEmail'),
            },
            envVars: {
              hasClientKey: !!process.env.NEXT_PUBLIC_TOSS_PAYMENTS_CLIENT_KEY,
              hasSdk: !!window.TossPayments,
            }
          });
        }

        setIsLoading(false);
      }
    };

    initializePayment();
  }, [searchParams]);

  if (error) {
    return (
      <div className="max-w-2xl mx-auto p-8">
        <Card>
          <CardBody className="text-center space-y-4">
            <div className="w-16 h-16 bg-red-400/10 rounded-full flex items-center justify-center mx-auto">
              <svg className="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            </div>
            <h2 className="text-xl font-semibold text-zinc-50">결제 오류</h2>
            <p className="text-zinc-400">{error}</p>

            {debugInfo && (
              <div className="mt-4 p-4 bg-red-900/20 border border-red-700/50 rounded-lg">
                <h3 className="text-sm font-semibold text-red-300 mb-2">디버그 정보</h3>
                <pre className="text-xs text-red-200 whitespace-pre-wrap">
                  {JSON.stringify(debugInfo, null, 2)}
                </pre>
              </div>
            )}

            <div className="flex gap-2 mt-4">
              <button
                onClick={() => window.location.reload()}
                className="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
              >
                다시 시도
              </button>
              <button
                onClick={() => router.push('/advertiser/billing')}
                className="px-4 py-2 bg-zinc-700 text-zinc-50 rounded-lg hover:bg-zinc-600 transition-colors"
              >
                결제 페이지로 돌아가기
              </button>
            </div>
          </CardBody>
        </Card>
      </div>
    );
  }

  return (
    <div className="max-w-2xl mx-auto p-8">
      <Card>
        <CardBody className="text-center space-y-4">
          <div className="w-16 h-16 bg-cyan-400/10 rounded-full flex items-center justify-center mx-auto">
            <div className="w-8 h-8 border-4 border-cyan-400 border-t-transparent rounded-full animate-spin"></div>
          </div>
          <h2 className="text-xl font-semibold text-zinc-50">결제 진행 중</h2>
          <p className="text-zinc-400">토스페이먼츠로 이동하는 중입니다...</p>
        </CardBody>
      </Card>
    </div>
  );
}
